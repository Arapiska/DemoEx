<Window x:Class="DemoEx.Mobile"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DemoEx"
        mc:Ignorable="d"
        Title="Mobile" Height="450" Width="300">
    <Grid>
        <StackPanel Margin="10,28,10,28">
            <TextBlock Text="Войти в личный кабинет" FontSize="20" HorizontalAlignment="Center" Margin="0 0 0 20"/>

            <TextBlock Text="Введите логин" FontSize="15" Width="214" />

            <TextBox x:Name="Login" Margin="0 0 0 20 " Height="30" Width="220"/>

            <TextBlock Text="Введите пароль" FontSize="15" Width="214" />
            <PasswordBox x:Name="Password"  Margin="0 0 0 20" Height="30" Width="220"/>

            <Button Content="Войти" Margin="0 30" Click="Button_Click" IsDefault = "true" Width="218"/>
            <Button Content="Зарегистрироваться" Click="Button_Click_1" Width="218"/>
        </StackPanel>
    </Grid>
</Window>
