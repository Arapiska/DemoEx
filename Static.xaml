<Page x:Class="DemoEx.Static"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DemoEx"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Static" Background="PowderBlue">

    <Grid>
        <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

        <TextBlock Text="Статистика" FontSize="36" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="310,9,0,0"/>
        <Button Background="GreenYellow" Content="Назад" Click="backButton_Click" Width="92" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0" Height="30"/>

        <Label x:Name="labelCompletedRequestsCount" FontSize="30" Content="Количество выполненных заявок:" Margin="20,80,0,0" Grid.Row="1"/>
        <Label x:Name="labelAverageExecutionTime" FontSize="30" Content="Среднее время выполнения заявки в минутах:" Margin="20,20,0,0" Grid.Row="2"/>
    </Grid>
</Page>
