<Page x:Class="DemoEx.Autopage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DemoEx"
      mc:Ignorable="d" 
      d:DesignHeight="550" d:DesignWidth="850"
      Title="Autopage">

    <Grid Background="PowderBlue">
        <StackPanel Margin="82,33,82,103">


            <TextBlock Text="Войти в личный кабинет" FontSize="20" HorizontalAlignment="Center" Margin="0 0 0 50"/>

            <TextBlock Text="Введите логин" FontSize="15" Width="214" />

            <TextBox x:Name="Txtlogin" Margin="0 0 0 50 " Height="30" Width="220"/>

            <TextBlock Text="Введите пароль" FontSize="15" Width="214" />
            <PasswordBox x:Name="Txtpassword" Margin="0 0 0 0" Height="30" Width="220"/>

            <Button Content="Войти" Margin="0 60" Click="Button_Aut" IsDefault = "true" Width="218" Background="GreenYellow" Height="29"/>
        </StackPanel>
    </Grid>
</Page>
